{
  "name": "cableforge-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "^2.3.3",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "ag-grid-community": "^34.1.1",
    "ag-grid-react": "^34.1.1",
    "autoprefixer": "^10.4.21",
    "dexie": "^4.2.0",
    "lucide-react": "^0.540.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-scripts": "5.0.1",
    "recharts": "^3.1.2",
    "sql.js": "^1.13.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --testResultsProcessor=jest-junit",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:ci": "cypress run --browser chrome --headless",
    "test:e2e": "npm run build && npm run cypress:run",
    "test:all": "npm run lint && npm run test:coverage && npm run test:e2e",
    "precommit": "npm run lint && npm run test:coverage",
    "eject": "react-scripts eject",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:desktop-only": "tauri dev --config src-tauri/tauri.conf.desktop.json",
    "tauri:build": "tauri build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@tauri-apps|ag-grid-community|ag-grid-react)/)"
    ],
    "moduleNameMapper": {
      "^@tauri-apps/api/(.*)$": "<rootDir>/src/__mocks__/tauri-api.ts"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@tauri-apps/cli": "^2.8.1",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/sql.js": "^1.4.9",
    "cypress": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jest-axe": "^10.0.0",
    "msw": "^2.10.5",
    "prettier": "^3.6.2"
  }
}
